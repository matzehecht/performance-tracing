{
  "compilerOptions": {
    "checkJs": false,
    "target": "es5",
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["es2019"],
    "noEmitOnError": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tmp/*"]
}
